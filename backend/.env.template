APP_ENV=development
APP_NAME=University Student API
APP_VERSION=1.0.0

# Docker compose DB URL
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/university_app

# Use a long random string (>=32 chars) from your secret manager.
JWT_SECRET_KEY=change-me-to-a-long-random-secret-key-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Comma-separated origins.
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

RATE_LIMIT_REQUESTS=120
RATE_LIMIT_WINDOW_SECONDS=60

LOGIN_MAX_ATTEMPTS=5
LOGIN_BLOCK_SECONDS=300

POSTGRES_DB=university_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
